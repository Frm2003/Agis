package br.fateczl.com.agis.controller;

import java.util.Map;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.servlet.mvc.support.RedirectAttributes;

import br.fateczl.com.agis.service.AlunoService;
import br.fateczl.com.agis.service.TurmaService;

@Controller
public class AlunoDisciplinasController {
	@Autowired
	private AlunoService aserv;
	
	@Autowired
	private TurmaService tserv;	
	
	@GetMapping("/aluno/disciplinas")
	public String get(@RequestParam Map<String, String> param, RedirectAttributes model) {
		aserv.buscar(param.get("ra");)
		
		model.addAllAttributes("ra");
		return "redirect:/aluno/logar";	
	}
}
