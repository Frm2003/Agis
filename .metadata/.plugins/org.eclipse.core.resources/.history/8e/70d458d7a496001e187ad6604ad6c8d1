package br.fateczl.com.agis.controller;

import java.util.Map;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.servlet.mvc.support.RedirectAttributes;

import br.fateczl.com.agis.service.TurmaService;

@Controller
public class AlunoHistoricoController {
	@Autowired
	private TurmaService tserv;
	
	@GetMapping("/aluno/historico")
	public String get(@RequestParam Map<String, String> param, RedirectAttributes model) {
		model.addFlashAttribute("ra", param.get("ra"));
		model.addFlashAttribute("turmas", tserv.listarTurmasDoAluno(param.get("ra")));
		return "alunos/alunoHistorico";
	}
	
}
