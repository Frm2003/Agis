package br.fateczl.com.agis.model.pk;

import java.io.Serializable;
import java.time.LocalDate;

import br.fateczl.com.agis.model.Aluno;
import br.fateczl.com.agis.model.Professor;
import jakarta.persistence.CascadeType;
import jakarta.persistence.Column;
import jakarta.persistence.Embeddable;
import jakarta.persistence.FetchType;
import jakarta.persistence.Id;
import jakarta.persistence.JoinColumn;
import jakarta.persistence.ManyToOne;
import lombok.AllArgsConstructor;
import lombok.Data;

@AllArgsConstructor
@Data
@Embeddable
public class SolicitacoesPk implements Serializable {
	private static final long serialVersionUID = 1L;
	private Aluno aluno;
	
	@Id
	@ManyToOne(cascade = CascadeType.ALL, targetEntity = Professor.class, fetch = FetchType.LAZY)
	@JoinColumn(name = "codProfessor")
	private Professor professor;
	
	@Column(length = 100, nullable = false)
	private String solicitacao;
	
	@Id
	@Column(columnDefinition = "DATE")
	private LocalDate data;
}	
